{
  "name": "dodo-discord-bot",
  "version": "2.0.0",
  "description": "Discord auto-threading bot inspired by Needle - creates public threads from messages in configured channels",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "catchup": "tsx scripts/catchup.ts",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "discord",
    "bot",
    "typescript",
    "auto-threading",
    "needle",
    "threads",
    "automation"
  ],
  "author": "Dodo Payments",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.9.0"
  }
}
